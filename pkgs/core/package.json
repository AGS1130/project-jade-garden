{
  "name": "@spark-css/core",
  "version": "0.0.0",
  "description": "Spark CSS core library to construct Ark UI styled slots with Tailwind CSS",
  "keywords": ["ark-ui", "tailwindcss", "spark-css", "core"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AGS1130/spark-css.git",
    "directory": "pkgs/core"
  },
  "bugs": {
    "url": "https://github.com/AGS1130/spark-css/issues"
  },
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./*": {
      "source": "./src/*.ts",
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      }
    }
  },
  "scripts": {
    "build": "bun typecheck && vite build",
    "clean": "rm -rf .turbo dist node_modules",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "postpack": "clean-package restore",
    "prepack": "clean-package",
    "release-it": "release-it --config ../../release-it.json",
    "typecheck": "tsc --noEmit"
  },
  "clean-package": {
    "remove": ["exports.\\..source", "exports.\\./*.source"]
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@spark-css/utils": "workspace:*",
    "@zag-js/accordion": "1.2.1",
    "@zag-js/avatar": "1.2.1",
    "@zag-js/carousel": "1.2.1",
    "@zag-js/checkbox": "1.2.1",
    "@zag-js/clipboard": "1.2.1",
    "@zag-js/collapsible": "1.2.1",
    "@zag-js/color-picker": "1.2.1",
    "@zag-js/combobox": "1.2.1",
    "@zag-js/date-picker": "1.2.1",
    "@zag-js/date-utils": "1.2.1",
    "@zag-js/dialog": "1.2.1",
    "@zag-js/editable": "1.2.1",
    "@zag-js/file-upload": "1.2.1",
    "@zag-js/hover-card": "1.2.1",
    "@zag-js/menu": "1.2.1",
    "@zag-js/number-input": "1.2.1",
    "@zag-js/pagination": "1.2.1",
    "@zag-js/pin-input": "1.2.1",
    "@zag-js/popover": "1.2.1",
    "@zag-js/progress": "1.2.1",
    "@zag-js/qr-code": "1.2.1",
    "@zag-js/radio-group": "1.2.1",
    "@zag-js/rating-group": "1.2.1",
    "@zag-js/select": "1.2.1",
    "@zag-js/signature-pad": "1.2.1",
    "@zag-js/slider": "1.2.1",
    "@zag-js/splitter": "1.2.1",
    "@zag-js/steps": "1.2.1",
    "@zag-js/switch": "1.2.1",
    "@zag-js/tabs": "1.2.1",
    "@zag-js/tags-input": "1.2.1",
    "@zag-js/timer": "1.2.1",
    "@zag-js/toast": "1.2.1",
    "@zag-js/toggle-group": "1.2.1",
    "@zag-js/tooltip": "1.2.1",
    "@zag-js/tree-view": "1.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@release-it/keep-a-changelog": "6.0.0",
    "clean-package": "2.2.0",
    "es-toolkit": "1.32.0",
    "globby": "14.1.0",
    "release-it": "18.1.2",
    "typescript": "5.8.2",
    "vite": "6.2.0",
    "vite-plugin-dts": "4.5.3"
  }
}
