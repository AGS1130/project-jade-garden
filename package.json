{
  "name": "project-jade-garden",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "playground/*",
      "projects/*",
      "scripts",
      "tools/*"
    ],
    "catalog": {
      "@biomejs/biome": "2.1.4",
      "es-toolkit": "1.39.8",
      "typescript": "5.9.2"
    },
    "catalogs": {
      "build": {
        "clean-package": "2.2.0",
        "globby": "14.1.0",
        "vite": "7.1.1",
        "vite-plugin-dts": "4.5.4"
      },
      "playground": {
        "@storybook/addon-a11y": "9.1.1",
        "@storybook/addon-themes": "9.1.1",
        "storybook": "9.1.1",
        "vite-tsconfig-paths": "5.1.4"
      },
      "tailwind": {
        "@tailwindcss/postcss": "4.1.11",
        "@tailwindcss/vite": "4.1.11",
        "tailwindcss": "4.1.11"
      }
    }
  },
  "scripts": {
    "postinstall": "lefthook install",
    "fresh": "bun clean && bun i && bun typecheck",
    "playground:react": "bun run --cwd playground/react",
    "playground:solid": "bun run --cwd playground/solid",
    "playground:svelte": "bun run --cwd playground/svelte",
    "playground:vue": "bun run --cwd playground/vue",
    "scripts": "bun run --cwd scripts",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "dev": "turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "project-jade-garden": "."
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/cli": "2.29.5",
    "@changesets/changelog-github": "0.5.1",
    "@types/bun": "1.2.19",
    "lefthook": "1.12.2",
    "typescript": "catalog:",
    "turbo": "2.5.5"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@biomejs/biome",
    "lefthook"
  ],
  "patchedDependencies": {
    "lightningcss@1.29.2": "patches/lightningcss@1.29.2.patch"
