{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": ["examples/*", "pkgs/*", "themes"],
  "scripts": {
    "postinstall": "lefthook install",
    "fresh": "bun clean && bun i && bun run build",
    "build": "bun pkg:utils build && bun pkg:core build && bun themes build",
    "example:react": "bun run --cwd examples/react",
    "example:solid": "bun run --cwd examples/solid",
    "example:svelte": "bun run --cwd examples/svelte",
    "example:vue": "bun run --cwd examples/vue",
    "pkg:core": "bun run --cwd pkgs/core",
    "pkg:utils": "bun run --cwd pkgs/utils",
    "themes": "bun run --cwd themes",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.0",
    "lefthook": "1.10.10",
    "turbo": "2.3.3"
  },
  "peerDependencies": {
    "typescript": "5.7.3"
  },
  "packageManager": "bun@1.2.0"
}
