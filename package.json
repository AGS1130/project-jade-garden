{
  "name": "project-jade-garden",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "docs",
      "packages/*",
      "playground/*"
    ],
    "catalog": {
      "@biomejs/biome": "2.2.4",
      "clean-package": "2.2.0",
      "es-toolkit": "1.39.10",
      "tailwindcss": "4.1.13",
      "typescript": "5.9.2",
      "vite": "7.1.5"
    },
    "catalogs": {
      "playground": {
        "@storybook/addon-a11y": "9.1.5",
        "@storybook/addon-themes": "9.1.5",
        "@tailwindcss/vite": "4.1.13",
        "storybook": "9.1.5",
        "vite-tsconfig-paths": "5.1.4"
      }
    }
  },
  "scripts": {
    "postinstall": "lefthook install",
    "fresh": "bun clean && bun i && bun typecheck",
    "docs": "bun run --cwd docs",
    "pkg:core": "bun run --cwd packages/core",
    "pkg:plugins": "bun run --cwd packages/plugins",
    "playground:react": "bun run --cwd playground/react",
    "playground:solid": "bun run --cwd playground/solid",
    "playground:svelte": "bun run --cwd playground/svelte",
    "playground:vue": "bun run --cwd playground/vue",
    "build": "turbo run build --filter='!./docs/**'",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "dev": "turbo run dev --filter='!./docs/**'",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "version": "changeset version && bun update",
    "release": "turbo run prepack && for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag && turbo run postpack"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@types/bun": "1.2.21",
    "lefthook": "1.13.0",
    "turbo": "2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.2.21",
  "overrides": {
    "@internationalized/date": "3.8.1",
    "@internationalized/number": "3.6.2"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "lefthook"
  ]
}
