{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": ["libs/*", "pkgs/*", "themes"],
  "scripts": {
    "fresh": "bun clean && bun i && bun run build",
    "build": "bun utils build && bun core build",
    "core": "bun run --cwd pkgs/core",
    "lib:react": "bun run --cwd libs/react",
    "lib:solid": "bun run --cwd libs/solid",
    "lib:svelte": "bun run --cwd libs/svelte",
    "lib:vue": "bun run --cwd libs/vue",
    "utils": "bun run --cwd pkgs/utils",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.16",
    "lefthook": "1.10.3",
    "turbo": "2.3.3"
  },
  "peerDependencies": {
    "typescript": "5.7.3"
  },
  "packageManager": "bun@1.1.44"
}
